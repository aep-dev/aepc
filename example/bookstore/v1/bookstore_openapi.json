  "components": {
    "schemas": {
      "Book": {
        "type": "object",
        "required": [
          "isbn",
          "price",
          "published"
        ],
        "properties": {
          "author": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "edition": {
            "type": "integer",
            "format": "int32"
          },
          "id": {
            "type": "string",
