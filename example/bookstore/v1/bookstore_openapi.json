              }
            }
          }
        },
        "parameters": null
      },
      "post": {
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/components/schemas/Book"
            }
          }
        },
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/components/schemas/Book"
            }
          },
          {
            "in": "path",
            "name": "id",
            "schema": {},
            "required": true,
            "type": "string"
          }
        ]
      }
    },
    "/books/{id}": {
      "delete": {
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/components/schemas/Book"
            }
          }
        },
        "parameters": null
      },
      "get": {
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/components/schemas/Book"
            }
